<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========== BASE APPLICATION THEME ========== -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- ========== TEACHER LESSON MANAGEMENT STYLES ========== -->

    <!-- Action Button Style cho Teacher Lesson Item -->
    <style name="ActionButtonStyle">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- ========== CARD STYLES ========== -->
    <style name="CardStyle">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="CardStyle.Lesson" parent="CardStyle">
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="CardStyle.Stats" parent="CardStyle">
        <item name="cardBackgroundColor">@color/primary_light</item>
        <item name="cardElevation">2dp</item>
    </style>

    <!-- ========== TEXT STYLES ========== -->
    <style name="TextStyle">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Subtitle" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Caption" parent="TextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextStyle.Stats" parent="TextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- ========== BUTTON STYLES ========== -->
    <style name="ButtonStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ButtonStyle.Primary" parent="ButtonStyle">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <style name="ButtonStyle.Secondary" parent="ButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="ButtonStyle.Danger" parent="ButtonStyle">
        <item name="android:background">@color/error</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- ========== FLOATING ACTION BUTTON STYLES ========== -->
    <style name="FabStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/text_on_primary</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="FabStyle.Large">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- ========== TOOLBAR STYLES ========== -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- ========== CHIP STYLES ========== -->
    <style name="ChipStyle">
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/chip_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- ========== STATUS INDICATOR STYLES ========== -->
    <style name="StatusIndicatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
    </style>

    <!-- ========== THUMBNAIL STYLES ========== -->
    <style name="ThumbnailStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- ========== PREMIUM BADGE STYLES ========== -->
    <style name="PremiumBadgeStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="tint">@color/text_on_primary</item>
    </style>

    <!-- ========== STATUS ICON STYLES ========== -->
    <style name="StatusIconStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- ========== DIALOG STYLES ========== -->
    <style name="DialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/surface</item>
    </style>

    <!-- ========== PROGRESS BAR STYLES ========== -->
    <style name="ProgressBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/primary</item>
    </style>

    <!-- ========== SEARCH VIEW STYLES ========== -->
    <style name="SearchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="queryHint">Tìm kiếm...</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <!-- ========== EMPTY STATE STYLES ========== -->
    <style name="EmptyStateStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <!-- ========== DIVIDER STYLES ========== -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="DividerStyle.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- ========== EXISTING APP STYLES ========== -->
    <!-- Keep these for backward compatibility -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Style cho Dropdown/Spinner -->
    <style name="Widget.MaterialComponents.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.ExposedDropdownMenu</item>
        <item name="endIconMode">dropdown_menu</item>
        <item name="endIconDrawable">@drawable/mtrl_dropdown_arrow</item>
        <item name="endIconContentDescription">@string/exposed_dropdown_menu_content_description</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <!-- Theme overlay cho dropdown -->
    <style name="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.ExposedDropdownMenu" parent="">
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>

    </style>



</resources>