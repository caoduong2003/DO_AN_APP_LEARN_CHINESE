<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTiengTrung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="你好，请多多关照"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPhienAm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="nǐ hǎo, qǐng duō duō guān zhào"
                    android:textColor="@android:color/darker_gray"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvTiengViet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Xin chào, rất vui được gặp bạn" />

                <TextView
                    android:id="@+id/tvGhiChu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dùng khi gặp người lần đầu"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="italic" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnPlayAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Phát âm thanh"
                android:padding="8dp"
                android:src="@android:drawable/ic_media_play" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>