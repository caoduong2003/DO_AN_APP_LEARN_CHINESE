<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".view.activity.VisualLearningActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#80000000"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Học qua hình ảnh"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_history"
            android:contentDescription="Lịch sử" />

    </LinearLayout>

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="200dp" />

    <!-- Captured Image Display -->
    <ImageView
        android:id="@+id/capturedImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="200dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/loadingProgress"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Capture Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/captureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_camera"
        app:backgroundTint="@color/primary"
        app:tint="@android:color/white"
        app:fabSize="normal" />

    <!-- Bottom Control Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#80000000"
        android:gravity="center">

        <Button
            android:id="@+id/retakeButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Chụp lại"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_outline_white"
            android:visibility="gone" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="Lưu vào bộ sưu tập"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_primary"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Results Container -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/resultContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bg_rounded_white"
        android:padding="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Favorite Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kết quả phân tích"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#424242" />

                <ImageButton
                    android:id="@+id/favoriteButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_favorite_border"
                    android:contentDescription="Yêu thích"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Object Name -->
            <TextView
                android:id="@+id/resultObjectText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đồ vật: ..."
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:padding="12dp" />

            <!-- Chinese Vocabulary -->
            <TextView
                android:id="@+id/resultVocabularyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中文: ..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_rounded_primary_light"
                android:padding="12dp" />

            <!-- Pinyin -->
            <TextView
                android:id="@+id/resultPinyinText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pinyin: ..."
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:padding="12dp" />

            <!-- Vietnamese Meaning -->
            <TextView
                android:id="@+id/resultVietnameseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiếng Việt: ..."
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_rounded_light_gray"
                android:padding="12dp" />

            <!-- Example Sentence -->
            <TextView
                android:id="@+id/resultExampleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ví dụ: ..."
                android:textSize="16sp"
                android:textColor="#424242"
                android:background="@drawable/bg_rounded_light_gray"
                android:padding="12dp"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>