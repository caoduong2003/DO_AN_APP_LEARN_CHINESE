<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Index -->
        <TextView
            android:id="@+id/tvIndex"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/circle_primary"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="12dp" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Chinese & Limit Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvChinese"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ä½ å¥½"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvLimitIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Premium"
                    android:textSize="10sp"
                    android:textColor="#E74C3C"
                    android:background="@drawable/bg_premium_tag"
                    android:padding="4dp"
                    android:fontFamily="sans-serif"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Pinyin -->
            <TextView
                android:id="@+id/tvPinyin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="nÇ hÇŽo"
                android:textSize="14sp"
                android:textColor="#3498DB"
                android:textStyle="italic"
                android:fontFamily="sans-serif"
                android:layout_marginTop="2dp" />

            <!-- Vietnamese - QUAN TRá»ŒNG: ThÃªm font support -->
            <TextView
                android:id="@+id/tvVietnamese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="xin chÃ o"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:fontFamily="sans-serif"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <Button
                android:id="@+id/btnPlayAudio"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle"
                android:text="ðŸ”Š"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="4dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:id="@+id/btnTranslate"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_circle"
                android:text="ðŸ”¤"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                style="@style/Widget.AppCompat.Button.Borderless" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>